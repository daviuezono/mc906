
def bitwise(one, two):
  out = []
  for i in range(CL_DAYS+CL_HOURS):
    el_one = int(one[i])
    el_two = int(two[i])
    out.append(el_one & el_two)

  days_of_week = out[0 : CL_DAYS]
  hours_of_day = out[CL_HOURS-1 : ]
  if (days_of_week.count(MATCH) == 1) and (hours_of_day.count(MATCH) == 1):
    return MATCH, days_of_week.index(MATCH), hours_of_day.index(MATCH)
  return MISMATCH, UNAVAILABLE, UNAVAILABLE
